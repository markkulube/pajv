{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Table Of Contents",
  "description": "Structure of a TOC",
  "type": "object",
  "properties": {
    "definitions": {
    "link": {
        "type": "object",
        "properties": {
            "label": { "type": "string" },
            "href": { "$ref": "#/properties/definitions/url_type"}
        },
        "required": ["label", "href"],
        "additionalProperties": false
        },
      "links": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "link": { "$ref": "#/properties/definitions/link" }
          },
          "required": ["link"],
          "additionalProperties": false
        }
      },
      "url_type": {
        "type": "string",
        "pattern": "(^/)|(https?:\\/\\/(({DomainName})|((www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6})\\b)([-a-zA-Z0-9()@:%_\\+.~#?&//=]*))"
      }
    },
    "toc": {
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "properties": {
          "type": "object",
          "properties": {
            "subcollection": {
              "type": "string"
            },
            "category": {
              "type": "string",
              "enum": [
                "ai",
                "analytics",
                "blockchain",
                "compute",
                    "compute_baremetal",
                    "compute_classic",
                    "content",
                    "openwhisk",
                    "runtime",
                    "virtualservers",
                "containers",
                "databse",
                "dev_ops",
                "integration",
                "internal",
                "internet_of_things",
                "logging_monitoring",
                "migration_tools",
                "mobile",
                "network",
                    "network_classic",
                    "network_edge",
                    "network_interconnectivity",
                    "network_vpc",
                "platform_services",
                "security",
                "storage",
                    "storage_classic",
                    "storage_datamovement",
                    "storage_vpc"
              ]
            },
            "audience": {
              "type": "string",
              "enum": ["platform", "service", "software", "internal"]
            },
            "href": { "$ref": "#/properties/definitions/url_type" },
            "console-page": { "$ref": "#/properties/definitions/url_type" },
            "product-page": { "$ref": "#/properties/definitions/url_type" },
            "path": { "type": "string" },
            "label": { "type": "string" },
            "version": { "type": "number" }
          },
          "required": ["subcollection", "href", "path", "label"],
          "additionalProperties": false
        },
        "entries": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "navgroup": {
                "type": "object",
                "properties": {
                  "id": { 
                    "type": "string",
                    "enum": [
                      "learn",
                      "tutorial",
                      "howto",
                      "reference",
                      "help"
                    ] },
                  "topics": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "anyOf": [
                        {
                          "type": "object",
                          "properties": {
                            "topicgroup": {
                              "type": "object",
                              "properties": {
                                "label": { "type": "string" },
                                "topics": {
                                  "type": "array",
                                  "minItems": 1,
                                  "items": {
                                    "anyOf": [
                                      { "type": "string" },
                                      {
                                        "type": "object",
                                        "properties": {
                                            "topic": {"type": "string"},
                                            "navtitle": {"type": "string"}
                                        },
                                        "additionalProperties": false
                                    },
                                      {
                                        "type": "object",
                                        "properties": {
                                          "topicgroup": {
                                            "type": "object",
                                            "properties": {
                                              "label": { "type": "string" },
                                              "topics": {
                                                "type": "array",
                                                "minItems": 1,
                                                "items": {
                                                    "anyOf": [
                                                        {
                                                            "type": "object",
                                                            "properties": {
                                                                "link": { "$ref": "#/properties/definitions/link" }
                                                            },
                                                            "additionalProperties": false
                                                        },
                                                        {
                                                          "type": "object",
                                                          "properties": {
                                                              "topic": {"type": "string"},
                                                              "navtitle": {"type": "string"}
                                                          },
                                                          "additionalProperties": false
                                                      },
                                                        {
                                                            "type": "string"
                                                        }
                                                    ]
                                                }
                                              },
                                              "links": {
                                                "$ref": "#/properties/definitions/links"
                                              }
                                            },
                                            "anyOf": [
                                                {
                                                    "required": [
                                                        "label",
                                                        "topics"
                                                    ]
                                                },
                                                {
                                                    "required": [
                                                        "label",
                                                        "links"
                                                    ]
                                                },
                                                {
                                                    "required": [
                                                        "label",
                                                        "topics",
                                                        "links"
                                                    ]
                                                }
                                            ],
                                            "additionalProperties": false
                                          },
                                        "link": { "$ref": "#/properties/definitions/link" }
                                        },
                                        "additionalProperties": false
                                      }
                                    ]
                                  }
                                },
                                "links": {
                                  "$ref": "#/properties/definitions/links"
                                }
                              },
                              "anyOf": [
                                {
                                    "required": [
                                        "label",
                                        "topics"
                                    ]
                                },
                                {
                                    "required": [
                                        "label",
                                        "links"
                                    ]
                                },
                                {
                                    "required": [
                                        "label",
                                        "topics",
                                        "links"
                                    ]
                                }
                            ],
                              "additionalProperties": false
                            },
                            "link": { "$ref": "#/properties/definitions/link" }
                          },
                          "additionalProperties": false,
                          "links": { "$ref": "#/properties/definitions/links" }
                        },
                        { "type": "string" },
                        {
                          "type": "object",
                          "properties": {
                              "topic": {"type": "string"},
                              "navtitle": {"type": "string"}
                          },
                          "additionalProperties": false
                      }
                      ]
                    }
                  },
                  "links": { "$ref": "#/properties/definitions/links" }
                },
                "anyOf": [
                    {
                        "required": [
                            "id",
                            "topics"
                        ]
                    },
                    {
                        "required": [
                            "id",
                            "links"
                        ]
                    },
                    {
                        "required": [
                            "id",
                            "topics",
                            "links"
                        ]
                    }
                ],
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["properties", "entries"],
      "additionalProperties": false
    }
  },
  "required": ["toc"],
  "additionalProperties": false
}
